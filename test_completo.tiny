begin
    var x;
    var y;
    var arr : array[3];
    var i;
    var suma;
    
    // Leer valores
    read x;
    read y;
    
    // Probar operadores aritmÃ©ticos
    write x + y;
    write x - y;
    write x * y;
    
    // Probar operadores relacionales
    if x > y then
        write 1
    else
        write 0
    end;
    
    // Llenar array con for
    for i := 0 to 2 step 1
        arr[i] := i * 2
    end;
    
    // Sumar elementos del array
    suma := 0;
    for i := 0 to 2 step 1
        suma := suma + arr[i]
    end;
    write suma;
    
    // Probar repeat
    i := 0;
    repeat
        write arr[i];
        i := i + 1
    until i = 3
end